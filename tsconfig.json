{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
        "lib": ["DOM", "ES2015", "ES2017", "ES5"]
    },
    "include": [
        "./**/*.*",
        "./shims-vue.d.ts", "docs/.vitepress/config.ts",
